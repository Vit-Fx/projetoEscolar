
@{
    ViewBag.Title = "AtTelAluno";
}

<h2>Atualizar Telefone do Aluno</h2>

@using (Html.BeginForm("AtTelAluno", "Escola", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
    <h4>Escolha o Aluno que Deseja Atualizar:</h4>
    @Html.DropDownList("alunos", "Escolha o Aluno")
    <br />
    <br />
    <br />
    <h4>Digite o novo Telefone:</h4>
    <input type="text" name="txtTelAluno" />
    <br />
    <br />

    <br />
    <input type="submit" value="Atualizar" />
    <br />
    <br />
}
@ViewBag.atualizar 